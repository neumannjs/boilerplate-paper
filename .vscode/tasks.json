{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Set input path",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\input.ps1",
      "args": ["${input:inputPath}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Publish slides to Github Pages",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\pages.ps1",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Paper to PDF",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "paper",
        "-defaults",
        "defaults/paper.yaml",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Paper to DOCX",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "paper",
        "-defaults",
        "defaults/paper.yaml",
        "-referencedoc",
        "assets/reference.docx",
        "-output",
        "../output/paper.docx",
        "-to",
        "docx",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Paper to TEX",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "paper",
        "-defaults",
        "defaults/paper.yaml",
        "-output",
        "../output/paper.tex",
        "-to",
        "latex",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Poster to PDF",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "poster",
        "-defaults",
        "defaults/poster.yaml",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Paper to DOCX specific commit",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "paper",
        "-defaults",
        "defaults/paper.yaml",
        "-referencedoc",
        "assets/reference.docx",
        "-output",
        "../output/paper.docx",
        "-to",
        "docx",
        "-commits",
        "${input:gitCommit}",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Paper track changes DOCX",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\compare.ps1",
      "args": [
        "-BaseFileName",
        "../output/paper.docx",
        "-SaveAsFileName",
        "../output/paper-track-changes.docx",
        "-Author",
        "${env:USERNAME}",
        "-commits",
        "${input:gitCommit}",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "dependsOn": "Paper to DOCX specific commit",
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Slides to RevealJs",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "slides",
        "-defaults",
        "defaults/slides.yaml",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Slides to Beamer",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "slides",
        "-defaults",
        "defaults/slides.yaml",
        "-to",
        "beamer",
        "-output",
        "../output/slides.pdf",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Slides to PPTX",
      "type": "shell",
      "command": "${workspaceFolder}\\tasks\\build.ps1",
      "args": [
        "-source",
        "slides",
        "-defaults",
        "defaults/slides.yaml",
        "-to",
        "pptx",
        "-output",
        "../output/slides.pptx",
        "-bibliography",
        "${config:boilerplatePaper.bibliography}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:boilerplatePaper.inputPath}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "gitCommit",
      "description": "Specify abbreviated commit hash(es)."
    },
    {
      "type": "promptString",
      "id": "inputPath",
      "description": "Specify the input path for the build tasks",
      "default": "demo"
    }
  ]
}
